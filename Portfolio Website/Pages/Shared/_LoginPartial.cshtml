@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <div>Hello @User.Identity?.Name!</div>
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/account/Manage/Index" title="Manage1">Manage Information</a>
    </li>
    <li class="nav-item">
         <a class="nav-link btn btn-link text-dark" href="@Url.Page("/Account/Logout", null, new { area = "Identity", returnUrl = Url.Page("/Index", new { area = "" }) })" role="button" aria-label="Logout">
             Logout
         </a>       
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
